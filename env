BASE=$(cd "$(dirname $_)/"; pwd)
BUILD="$BASE/build"

cmake-init() { (
    set -e
    mkdir -p "$BUILD"
    cd "$BUILD"
    cmake "${BASE}/src"  -G Ninja                                      \
         -DCMAKE_CXX_COMPILER_LAUNCHER=ccache                          \
         -DCMAKE_BUILD_TYPE=RelWithDebInfo                             \
         -DBUILD_TESTING=ON                                            \
         -DCMAKE_INSTALL_PREFIX="${BASE}/release"
) }
