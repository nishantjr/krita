#!/usr/bin/env bash
set -o e

BASE=$(cd "$(dirname $0)/.."; pwd)
BUILD="$BASE/build"

mkdir "$BUILD"
cd "$BUILD"
cmake "${BASE}/src"  -G Ninja                                      \
     -DCMAKE_CXX_COMPILER_LAUNCHER=ccache                          \
     -DCMAKE_BUILD_TYPE=RelWithDebInfo                             \
     -DBUILD_TESTING=ON                                            \
     -DCMAKE_INSTALL_PREFIX="${BASE}/release"
